    <link href="/stylesheets/style.css" rel="stylesheet">

  </head>
  <body>

    <div class="container">
      <% if flash[:message] %>
        <h3><%= flash[:message] %></h3>
      <% end %>

      <% if flash[:errors] %>
        <h3 style="color: red;"><%= flash[:errors] %></h3>
      <% end %>
    </div>

      <% if logged_in? %>
        <nav class="nav nav-pills nav-fill">
          <a id="disabled" class="nav-item nav-link disabled" href="/users"><%= current_user.name %></a>
          <a class="nav-item nav-link" href="/users">Home</a>
          <a class="nav-item nav-link" href="/events">Events</a>
          <a class="nav-item nav-link" href="/groups">Groups</a>
          <a class="nav-item nav-link" href="/logout">Log out</a>
        </nav>
      <% end %>

      <br>

  <div class="container-fluid float-right">

        <%= yield %>

        <br>

        <div class="footer">
          <small>&copy; 2018 <strong>SinatraEventsCalander</strong></small>
        </div>
    </div>


    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" type="text/javascript"></script>
