<form action="/events" method="post">
  <label for="event_name">Event: </label>
  <input type="text" name="event[name]" placeholder="ex: Meeting" id="event_name" required>

  <label for="event_date">Date:</label>
  <input type="date" id="event_date" name="event[date]"
         value="<%=Time.now.year%>-<%=Time.now.month%>-<%=Time.now.day%>"
         min="<%=Time.now.year%>-<%=Time.now.month%>-<%=Time.now.day%>" required>

  <label for="event_start">Start Time:</label>
  <input id="event_start" type="time" name="event[start]" value="<%= DateTime.new(2018,1,1,9).strftime('%I:%M') %>" required>

  <label for="event_end">End Time:</label>
  <input id="event_start" type="time" name="event[end]" value="<%= DateTime.new(2018,1,1,10).strftime('%I:%M') %>" required>
  <span class="note">Open from 9am to 9pm</span>

  <br></br>

  <label>Groups:</label>
  <% @groups.each do |group| %>
    <label for="<%= group.id %>"><%= group.name %></label>
    <input type="checkbox" name="event[group_ids][]" value="<%= group.id %>">
  <% end %>

  <br><br>

  <textarea name="event[description]" rows="8" cols="50" placeholder="Description" required></textarea>

  <input type="submit" value="Create Event">
</form>
