<h1>CREATE NEW EVENT HERE</h1>

<form action="/events" method="post">
  <label for="name">Event: </label>
  <input type="text" name="name" placeholder="ex: Meeting">


  <!-- <input type="month" id="date" name="date" min="<%=Time.now.year%>-<%=Time.now.month%>" value="<%=Time.now.year%>-<%=Time.now.month%>"> -->

  <label for="date">Date:</label>

  <input type="date" id="date" name="date"
         value="<%=Time.now.year%>-<%=Time.now.month%>-<%=Time.now.day%>"
         min="<%=Time.now.year%>-<%=Time.now.month%>-<%=Time.now.day%>" >



  <label for="start">Start Time:</label>

  <input type="time" id="start" name="start"
         min="9:00" max="21:00" required>

  <!-- <span class="note">Earliest is 9:30 AM</span> -->

  <label for="end">End Time:</label>

  <input type="time" id="end" name="end"
         min="9:00" max="21:00" required>

  <span class="note">Open from 9am to 9pm</span>


  <br></br>

  <textarea name="description" rows="8" cols="50" placeholder="Description"></textarea>

  <input type="submit" value="Create Event">

</form>
