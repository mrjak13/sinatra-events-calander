<h3>Check out what's going on!</h3>

<br>

<ul>
<% @events.each do |event| %>
  <li><a href="/events/<%= event.id %>"><%= event.name %></a> on <%= event.date.strftime('%A %B %d') %> at <%= event.start_time.strftime('%I:%M %p') %> hosted by: <%= event.user.name %></li>
<% end %>
</ul>

<br>

<form action="/events/new" method="get">
  <input type="submit" value="New Event">
</form>
